#!/bin/sh /etc/rc.common

USE_PROCD=1
START=50

start_service(){
    
    procd_open_instance
    procd_set_param command /usr/bin/pin_control
    procd_set_param pidfile /var/run/pin_control.pid
    procd_close_instance
    
}

service_triggers()
{
    procd_add_reload_trigger "pin_control"
}
service_reload()
{
    stop
    start
}